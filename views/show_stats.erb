<html>
<head>
  <title>Stats for <%= request.base_url %>/<%= url_id %></title>
  <link href="<%= url('css/stylesheet.css') %>" rel="stylesheet" type="text/css"/>
</head>
<body>
<table class="url_info">
  <tr>
    <td>
      Original URL
    </td>
    <td>
      <%= original_url %>
    </td>
  </tr>
  <tr>
    <td>
      "Shortened" URL
    </td>
    <td>
      <% if links_repo.get_vanity_url(url_id) == '' %>
        <%= request.base_url %>/<%= url_id %>
      <% else %>
        <%= request.base_url %>/<%= vanity_url %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>
      <p>Visits: <%= visit_count %></p>
    </td>
    <td>
      <a href="/">"Shorten" another URL</a>
    </td>
  </tr>
</table>
</body>
</html>